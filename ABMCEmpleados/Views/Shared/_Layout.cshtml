<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <script type="text/javascript" src="~/Scripts/angular.js"></script>
    <script type="text/javascript" src="~/Scripts/dirPagination.js"></script>
    <script type="text/javascript" src="~/Scripts/alasql.min.js"></script>
    <script type="text/javascript" src="~/Scripts/xlsx.core.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Empleados", "Index", "Empleado", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Países", "Index", "Pais")</li>
                    <li>@Html.ActionLink("Provincias", "Index", "Provincia")</li>
                    <li>@Html.ActionLink("Ciudades", "Index", "Ciudad")</li>
                </ul>
                @if (Session["usuario"] != null && Session["password"] != null && Session["email"] != null)
                {
                    <div class="buttonLogin">
                        @Html.ActionLink("Bienvenido, " + Session["nombre"], "Logout", "Ingresar")
                    </div>
                }
                else
                {
                    <div class="buttonLogin">
                        @Html.ActionLink("Ingrese", "Index", "Ingresar")
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
